import json
def load_detail():
    try:
        with open('Youtub.txt','r') as file:
            return json.load(file)
    except FileNotFoundError:
        return []
def save_detail(videos):
    with open('Youtube.txt','w') as file:
        json.dump(videos,file)
def List_all_vieos(videos):
    print("\n")
    print("*" * 70)
    for index,video in enumerate(videos, start=1):
        print(f"{index}. {video['name']},Duration: {video['time']}")
    print("\n")
    print("*" * 70)
    
def add_video(videos):
    name = input("Enter your video name :-")
    time = input("Enter your time :-")
    videos.append({'name': name, 'time': time})
    save_detail(videos)
def Update_video(videos):
    List_all_vieos(videos)
    index = int(input("Enter your update name and number"))
    if 1 <= index <= len(videos):
        name = input("Enter your name ")
        time = input("Enter your time")
        videos[index - 1] = {'name': name, 'time': time}
    else:
        print("Invailed cintex")
        save_detail(videos)
def Delete_video(videos):
    List_all_vieos(videos)
    index = int(input("Delet your name and number"))
    if 1 <= index <= len(videos):
        del videos[index-1]
        save_detail(videos)
    else:
        print("Invailed cintex")

def main():
    videos = load_detail()
    while True:
        print("\n Youtube Manager | Chose an option")
        print("1, List all youtube videos ")
        print("2, Add a youtube video ")
        print("3, Update a youtube vidwo details ")
        print("4, Delete a youtube video ")
        print("5, Exit the app ")
        
        choice = input("Enter your Choice :=")
        print(videos)
        
        match choice:
            case '1':
                List_all_vieos(videos)
            case '2':
                add_video(videos)
            case '3':
                Update_video(videos)
            case '4':
                Delete_video(videos)
            case '5':
                break
            case _:
                print("Invalid choice please try agin")

if __name__ == "__main__":
    main()

